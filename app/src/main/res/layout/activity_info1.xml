<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2dcdc"
    tools:context="com.example.ahnafmozib.easymeterreading.Info1">


    <TextView
        android:id="@+id/Information1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Information"
        android:textColor="#106060"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/MeterIdOfInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Information1"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:text="Meter Id :"
        android:textColor="#2247ff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/meterIdInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MeterIdOfInfo1"
        android:layout_below="@+id/MeterIdOfInfo1"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/customerIdofInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/meterIdInput"
        android:layout_below="@+id/meterIdInput"
        android:layout_marginTop="14dp"
        android:text="Customer Id :"
        android:textColor="#2247ff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/customerIdInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/customerIdofInfo1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/customerNAmeofInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/customerIdInput"
        android:layout_below="@+id/customerIdInput"
        android:layout_marginTop="17dp"
        android:text="Customer Name :"
        android:textColor="#2247ff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/customerNameInputOfInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/customerNAmeofInfo1"
        android:layout_below="@+id/customerNAmeofInfo1"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Information1"
        android:layout_below="@+id/customerNameInputOfInfo1"
        android:layout_marginStart="19dp"
        android:text="Verify"
        android:textColor="#f1f1f5"
        android:textSize="30dp"
        android:background="#1c0101"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonVerifyLatter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Verify Later"
        android:textColor="#fafafd"
        android:background="#210101"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>
