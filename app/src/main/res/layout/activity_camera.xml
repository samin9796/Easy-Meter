<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2dcdc"
    tools:context="com.example.ahnafmozib.easymeterreading.Camera">

    <TextView
        android:id="@+id/CameraTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageofCAmera"
        android:layout_marginTop="12dp"
        android:text="Take Snap of the Meter"
        android:textColor="#106060"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="55dp" />

    <ImageView
        android:id="@+id/ImageofCAmera"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/CameraTitle"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/CurrentMeterReadingOfCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ImageofCAmera"
        android:layout_below="@+id/ImageofCAmera"
        android:layout_marginTop="22dp"
        android:text="Current Meter Reading :"
        android:textColor="#2247ff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/CurrentMeterReadingShowOfCAmera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CurrentMeterReadingOfCamera"
        android:layout_below="@+id/CurrentMeterReadingOfCamera"
        android:ems="10"
        android:inputType="number"
        android:text="2345667"
        android:textSize="25dp" />

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="23dp"
        android:background="#210404"
        android:textColor="#fefcfc"
        android:text="Retry"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/buttonProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRetry"
        android:layout_alignBottom="@+id/buttonRetry"
        android:layout_alignEnd="@+id/CurrentMeterReadingOfCamera"
        android:background="#210404"
        android:text="Proceed"
        android:textColor="#fefcfc"
        android:textSize="20dp" />


</RelativeLayout>
